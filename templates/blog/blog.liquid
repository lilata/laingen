{% capture body %}
    <section>
        <h1>Blog</h1>
        <h2>Page {{ page }}</h2>
    </section>
    <section class="centered">
        {% for post in posts %}
            <div>
                <h2>
                    <a href="{{ post.url }}">
                        {{ post.Title }}
                    </a>
                </h2>
                <h5>{{ post.Date|date }}</h5>
                <p>{{ post.Summary}}</p>
            </div>
        {% endfor %}
        {% if page > 1 or page < pages %}
            <div>
                {% if page > 1 %}
                    <a href="/blog/{{ page | minus: 1 }}">>> Previous Page</a>
                {% endif %}

                {% if page < pages %}
                    <a href="/blog/{{ page | plus: 1 }}">>> Next Page</a>
                {% endif %}
            </div>
        {% endif %}
        <blockquote>
            <h2>Tags</h2>
            <div>
                {% for tag in tags %}
                    <a href="/blog/tags/{{ tag }}">{{ tag }}</a>&nbsp;
                {% endfor %}
            </div>
        </blockquote>
    </section>
{% endcapture %}
{% render "base", title: "Blog", body: body %}
